<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="available_time-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :time) %>
    <%= time_select(f, :time) %>
    <%= error_tag(f, :time) %>

    <%= label(f, :date) %>
    <%= date_input(f, :date) %>
    <%= error_tag(f, :date) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
